<div class="change-pw-form-group">
  <div class="form-group">
    <label for="previous">Old Password</label>
    {{input type="password"
            class="change-pw-form-input form-control"
            id="previous"
            placeholder="Old password"
            value=passwords.previous}}
  </div>

  <div class="form-group">
    <label for="next">New Password</label>
    {{input type="password"
            class="change-pw-form-input form-control"
            id="next"
            placeholder="New password"
            value=passwords.next}}
  </div>
</div>


<div class="buttons-change-pw-wrapper">
  <button class="buttons-change-pw bttn-jelly bttn-md bttn-back button-custom" {{action "reset"}}><span class="glyphicon glyphicon-refresh"></span>
    Reset Fields
  </button>

  <button type="submit" class="buttons-change-pw bttn-jelly bttn-md button-custom" {{action "submit"}}><span class="glyphicon glyphicon-save"></span>
    Change Password
  </button>
</div>
